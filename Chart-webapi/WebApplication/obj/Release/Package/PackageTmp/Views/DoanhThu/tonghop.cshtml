
@{
    ViewBag.Title = "Tổng quan doanh thu";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/apexcharts/3.36.3/apexcharts.min.css">
    <link rel="stylesheet" href="~/css/chart.css">
    <style>
        .highcharts-title, .highcharts-credits, .highcharts-legend-item {
            display: none;
        }
    </style>

    <style>
        select {
            padding: 5px 10px;
            border-radius: 5px;
            outline: none;
        }
    </style>
</head>
<body>
    <div class="kt-content  kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor" id="kt_content">
        <!-- end:: Content Head -->
        <!-- begin:: Content -->
        <div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
            <div class="row">
                <div class="col-lg-5">
                    <!--begin::Portlet-->
                    <div class="kt-portlet">
                        <div class="kt-portlet__head">
                            <div class="kt-portlet__head-label">
                                <h3 class="kt-portlet__head-title">
                                    KẾT QUẢ BÁN HÀNG HÔM NAY
                                </h3>
                            </div>

                        </div>
                        <div class="kt-portlet__body">

                            <div class="kt-widget4">
                                <div class="kt-widget4__item justify-content-start">
                                    <div class="kt-widget4__pic kt-widget4__pic--icon">
                                        <img src="~/assets/media/icons/svg/Shopping/Dollar.svg" />
                                        <span> Doanh thu</span>
                                    </div>
                                    <h2 class="value"></h2>
                                </div>
                            </div>
                        </div>
                        <!--end::Form-->
                    </div>
                    <!--end::Portlet-->
                </div>
                <div class="col-xl-7 col-lg-12 order-lg-3 order-xl-1">
                    <!--begin:: Widgets/Best Sellers-->
                    <div class="kt-portlet kt-portlet--height-fluid">
                        <div class="kt-portlet__head">
                            <div class="kt-portlet__head-label">
                                <h3 class="kt-portlet__head-title">
                                    Top 3 khách hàng doanh thu cao nhất
                                </h3>
                            </div>
                            <div class="kt-portlet__head-toolbar">
                                <ul class="nav nav-pills nav-pills-sm nav-pills-label nav-pills-bold" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active" data-toggle="tab" href="#kt_widget5_tab1_content" role="tab">
                                            Tuần trước
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" data-toggle="tab" href="#kt_widget5_tab2_content" role="tab">
                                            Tháng trước
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" data-toggle="tab" href="#kt_widget5_tab3_content" role="tab">
                                            Năm trước
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" data-toggle="tab" href="#kt_widget5_tab4_content" role="tab">
                                            Tất cả thời gian
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="kt-portlet__body">
                            <div class="tab-content">
                                <div class="tab-pane active" id="kt_widget5_tab1_content" aria-expanded="true">
                                    <div class="kt-widget5">

                                    </div>
                                </div>
                                <div class="tab-pane" id="kt_widget5_tab2_content">
                                    <div class="kt-widget5">

                                    </div>
                                </div>
                                <div class="tab-pane" id="kt_widget5_tab3_content">
                                    <div class="kt-widget5">

                                    </div>
                                </div>
                                <div class="tab-pane" id="kt_widget5_tab4_content">
                                    <div class="kt-widget5">

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--end:: Widgets/Best Sellers-->


                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <!--begin::Portlet-->
                    <div class="kt-portlet">
                        <div class="kt-portlet__head">
                            <div class="kt-portlet__head-label">
                                <h3 class="kt-portlet__head-title">
                                    DOANH THU NĂM <span>2022</span>
                                </h3>
                            </div>
                            <div class="kt-portlet__head-label">
                                <select class="" id="slc_year">
                                    <option value="1">Năm hiện tại</option>
                                    <option value="2">Năm trước</option>
                                </select>
                            </div>
                        </div>
                        <!--begin::Form-->
                        <div class="kt-form kt-form--label-left">
                            <div class="kt-portlet__body col-lg-12 col-sm-12">
                                <div id="chart1"></div>
                            </div>
                        </div>
                        <!--end::Form-->
                    </div>
                    <!--end::Portlet-->
                </div>

            </div>
            <div class="row">
                <div class="col-lg-12">
                    <!--begin::Portlet-->
                    <div class="kt-portlet">
                        <div class="kt-portlet__head">
                            <div class="kt-portlet__head-label">
                                <h3 class="kt-portlet__head-title dtmh">
                                    TOP 10 MÃ HÀNG BÁN CHẠY <span> HÔM NAY</span>
                                </h3>
                                <select class="" id="slc_theo">
                                    <option value="1">THEO DOANH THU</option>
                                    <option value="2">THEO SỐ LƯỢNG</option>
                                </select>
                            </div>
                            <div class="kt-portlet__head-label">
                                <select class="" id="slc_date">
                                    <option value="1">Hôm nay</option>
                                    <option value="2">Hôm qua</option>
                                    <option value="3">7 ngày qua</option>
                                    <option value="4">Tháng này</option>
                                    <option value="5">Tháng trước</option>
                                </select>
                            </div>
                        </div>
                        <!--begin::Form-->
                        <div class="kt-form kt-form--label-left">
                            <div class="kt-portlet__body col-lg-12 col-sm-12">
                                <div id="chart"></div>
                            </div>
                        </div>
                        <!--end::Form-->
                    </div>
                    <!--end::Portlet-->
                </div>

            </div>
            <!-- Top 3 khách hàng doanh thu cao nhất -->
